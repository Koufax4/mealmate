<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material Design 3 support -->
    <style name="Theme.MealMate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firebase_red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/firebase_red_100</item>
        <item name="colorOnPrimaryContainer">@color/firebase_red_900</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/firebase_yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/firebase_yellow_100</item>
        <item name="colorOnSecondaryContainer">@color/firebase_yellow_900</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/orange_500</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/orange_100</item>
        <item name="colorOnTertiaryContainer">@color/orange_900</item>

        <!-- Surface colors. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/gray_100</item>
        <item name="colorOnSurfaceVariant">@color/gray_700</item>

        <!-- Outline colors. -->
        <item name="colorOutline">@color/gray_400</item>
        <item name="colorOutlineVariant">@color/gray_200</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="Widget.MealMate.TextInputLayout.OutlinedBox.Rounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/custom_text_input_outline_color</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <!-- You can adjust hint text color if needed -->
        <!-- <item name="hintTextColor">?attr/colorPrimary</item> -->
    </style>

</resources>