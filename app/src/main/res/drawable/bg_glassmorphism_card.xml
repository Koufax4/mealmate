<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:type="radial"
        android:gradientRadius="300dp"
        android:centerX="0.5"
        android:centerY="0.3"
        android:startColor="?attr/colorSurfaceContainer"
        android:centerColor="?attr/colorSurface"
        android:endColor="?attr/colorSurfaceVariant" />
    <corners android:radius="24dp" />
    <stroke
        android:width="1dp"
        android:color="?attr/colorOutlineVariant" />
</shape>