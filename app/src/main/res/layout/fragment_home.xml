<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_home"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- Hero Section with Glassmorphism Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/heroCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:background="@drawable/bg_glassmorphism_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <!-- App Logo -->
                    <ImageView
                        android:id="@+id/imageAppLogo"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_recipe"
                        android:layout_marginBottom="16dp"
                        app:tint="?attr/colorPrimary"
                        android:contentDescription="@string/app_logo_description" />

                    <!-- Dynamic Welcome Text -->
                    <TextView
                        android:id="@+id/textWelcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Good Morning! ðŸŒ…"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Dynamic Subtitle -->
                    <TextView
                        android:id="@+id/textSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ready to plan some delicious meals?"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/gray_700" />

                    <!-- Quick Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textRecipeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recipes"
                                android:textSize="12sp"
                                android:textColor="@color/gray_700" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:background="@color/gray_200" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textMealPlansCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorSecondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meal Plans"
                                android:textSize="12sp"
                                android:textColor="@color/gray_700" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:background="@color/gray_200" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textGroceryListsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange_500" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shopping Lists"
                                android:textSize="12sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/gray_700" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Quick Actions Section Header -->
            <TextView
                android:id="@+id/textQuickActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toBottomOf="@id/heroCard"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Navigation Grid with Modern Cards -->
            <LinearLayout
                android:id="@+id/navigationGrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textQuickActions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Row 1: My Recipes & Meal Planner -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- My Recipes Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMyRecipes"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/purple_100"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_recipe"
                                android:layout_marginBottom="12dp"
                                app:tint="@color/purple_900"
                                android:contentDescription="My Recipes" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Recipes"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/purple_900" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/create_manage"
                                android:textSize="12sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/purple_900"
                                android:alpha="0.8" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Meal Planner Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMealPlanner"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/teal_100"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_menu_gallery"
                                android:layout_marginBottom="12dp"
                                app:tint="@color/teal_900"
                                android:contentDescription="Meal Planner" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meal Planner"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/teal_900" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weekly planning"
                                android:textSize="12sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/teal_900"
                                android:alpha="0.8" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Row 2: Grocery Lists & Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Grocery Lists Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardGroceryLists"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/orange_100"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_menu_slideshow"
                                android:layout_marginBottom="12dp"
                                app:tint="@color/orange_900"
                                android:contentDescription="Grocery Lists" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grocery Lists"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/orange_900" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Smart shopping"
                                android:textSize="12sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/orange_900"
                                android:alpha="0.8" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Settings Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSettings"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/gray_100"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_menu_manage"
                                android:layout_marginBottom="12dp"
                                app:tint="@color/gray_700"
                                android:contentDescription="Settings" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Settings"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/gray_700" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/account_prefs"
                                android:textSize="12sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/gray_700"
                                android:alpha="0.8" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Logout Button -->
            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:layout_constraintTop_toBottomOf="@id/navigationGrid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Floating Action Button for Quick Add -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabQuickAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Add Recipe"
        app:icon="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>