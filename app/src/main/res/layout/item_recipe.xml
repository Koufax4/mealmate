<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/imageViewRecipe"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_recipe_placeholder_24"
            android:background="@color/gray_200"
            android:contentDescription="Recipe image" />

        <!-- Recipe Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Recipe Name -->
            <TextView
                android:id="@+id/textViewRecipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipe Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"
                tools:text="Delicious Chocolate Cake" />

            <!-- Ingredients Count -->
            <TextView
                android:id="@+id/textViewIngredientsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 ingredients"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_ingredients_24"
                android:drawablePadding="4dp"
                android:maxLines="1"
                tools:text="8 ingredients" />

            <!-- Recipe Metadata -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Prep Time -->
                <TextView
                    android:id="@+id/textViewPrepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 min"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:background="@drawable/rounded_background_light"
                    android:padding="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:drawableStart="@drawable/ic_prep_time_24"
                    android:drawablePadding="2dp"
                    android:visibility="gone"
                    android:maxLines="1"
                    tools:text="15 min"
                    tools:visibility="visible" />

                <!-- Cook Time -->
                <TextView
                    android:id="@+id/textViewCookTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:background="@drawable/rounded_background_light"
                    android:padding="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:drawableStart="@drawable/ic_cook_time_24"
                    android:drawablePadding="2dp"
                    android:layout_marginStart="4dp"
                    android:visibility="gone"
                    android:maxLines="1"
                    tools:text="30 min"
                    tools:visibility="visible" />

                <!-- Servings -->
                <TextView
                    android:id="@+id/textViewServings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 servings"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:background="@drawable/rounded_background_light"
                    android:padding="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:drawableStart="@drawable/ic_servings_24"
                    android:drawablePadding="2dp"
                    android:layout_marginStart="4dp"
                    android:visibility="gone"
                    android:maxLines="1"
                    tools:text="4 servings"
                    tools:visibility="visible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Category -->
                <TextView
                    android:id="@+id/textViewCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dessert"
                    android:textSize="12sp"
                    android:textColor="@color/purple_700"
                    android:background="@drawable/rounded_background_purple"
                    android:padding="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:visibility="gone"
                    android:maxLines="1"
                    tools:text="Dessert"
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!-- Menu Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMenuMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="40dp"
            android:minHeight="40dp"
            app:icon="@drawable/ic_more_vert_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            style="@style/Widget.Material3.Button.IconButton" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>