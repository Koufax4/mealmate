<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/teal_100"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_recipe_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recipe Name"
            android:textSize="14sp"
            android:textColor="@color/teal_900" />

        <ImageButton
            android:id="@+id/button_remove_meal"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close_24"
            android:background="@drawable/remove_button_background"
            android:contentDescription="Remove Recipe"
            app:tint="@color/white" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>